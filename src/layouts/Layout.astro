---
import NsFooter from '../components/NsFooter.astro'
import NsHeader from '../components/NsHeader.astro'
export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="NUIST 学习资料" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      href="https://unpkg.com/@chinese-fonts/syst@1.3.0/dist/SourceHanSerifCN/result.css"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="p-0 m-0 relative">
    <NsHeader />
    <slot />
    <NsFooter />
  </body>
</html>

<style>
  html {
    font-family: 'Source Han Serif CN VF' !important;
    /* font-weight: 'Regular'; */
    background-color: #fff;
    padding: 0;
    margin: 0;
    scroll-behavior: smooth;
  }
</style>
